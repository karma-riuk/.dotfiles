#!/usr/bin/env bash


[[ -z "${DOTFILES+x}" ]] && DOTFILES="$HOME/.dotfiles"

[[ -z "${STOW_FOLDERS+x}" ]] && STOW_FOLDERS="awesome,bin,brightctl,dunst,htop,latex,notify-bar,profile,termite,vconf,vim,volumectl,zathura,zsh"


pushd $DOTFILES > /dev/null

IFS=','; for folder in $STOW_FOLDERS; do
    stow -D "$folder"
    echo "Removing $folder"
done

popd > /dev/null
